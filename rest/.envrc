# direnv configuration for local development
# This file is automatically loaded by direnv when you cd into this directory

# Activate Python virtual environment if it exists
if [ -f ".venv/bin/activate" ]; then
    source .venv/bin/activate
fi

# API Server Configuration
export API_HOST="0.0.0.0"
export API_PORT="8000"
export API_RELOAD="true"

# Database Configuration
export DB_PATH="$HOME/Library/Application Support/Cursor/User/globalStorage/state.vscdb"

# Cursor Agent Configuration
export CURSOR_AGENT_PATH="$HOME/.local/bin/cursor-agent"
export CURSOR_AGENT_TIMEOUT="90"

# Job Management
export JOB_CLEANUP_MAX_AGE_HOURS="1"
export JOB_CLEANUP_INTERVAL_MINUTES="30"

# Development settings
export PYTHONPATH="${PWD}:${PYTHONPATH}"

