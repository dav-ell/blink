# Example environment configuration
# Copy this file to .env and adjust values as needed

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Database Configuration
# Default macOS location for Cursor database
DB_PATH=~/Library/Application Support/Cursor/User/globalStorage/state.vscdb

# Cursor Agent Configuration
CURSOR_AGENT_PATH=~/.local/bin/cursor-agent
CURSOR_AGENT_TIMEOUT=90

# Job Management
JOB_CLEANUP_MAX_AGE_HOURS=1
JOB_CLEANUP_INTERVAL_MINUTES=30
