# Blink Rust Server Configuration

# Path to Cursor's chat database (required)
DB_PATH=/Users/username/Library/Application Support/Cursor/User/workspaceStorage/xxxxx/state.vscdb

# Path to cursor-agent CLI (required)
CURSOR_AGENT_PATH=~/.local/bin/cursor-agent

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000

# Device state database (for remote devices and jobs)
DEVICE_DB_PATH=./device_state.db

# SSH configuration
SSH_TIMEOUT=300
SSH_CONNECT_TIMEOUT=10
DEFAULT_CURSOR_AGENT_PATH=~/.local/bin/cursor-agent

# CORS configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Job cleanup configuration
JOB_CLEANUP_MAX_AGE_HOURS=24
JOB_CLEANUP_INTERVAL_MINUTES=60
